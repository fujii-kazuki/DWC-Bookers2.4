<% if book.favorites_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, remote: true, style: 'color: deeppink' do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true, class: 'text-primary' do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% end %>