<%= form_with url: search_path, method: :get, local: true do |f| %>
  <div class="container mb-md-3 mb-2">
    <div class="form-row justify-content-end">
      <%= f.text_field :word, class: 'form-control col-md-3 col-12', placeholder: 'Word' %>
      <%= f.select :model, options_for_select([['User'], ['Book']]), {}, {class: 'form-control col-2'} %>
      <%= f.select :method, options_for_select([['完全一致','perfect_match'], ['前方一致','forward_match'], ['後方一致', 'backward_match'], ['部分一致', 'partial_match']]), {}, {class: 'form-control col-md-2 col-3'} %>
      <%= f.submit '検索', class: 'btn btn-primary btn-sm col-md-1 col-2' %>
    </div>
  </div>
<% end %>