<div class="container px-5 px-sm-0">
  <h2>Follow Users</h2>
  <% if @following_users.count > 0 %>
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @following_users.each do |user| %>
          <td><%= image_tag user.get_profile_image, size:'100x100' %></td>
          <td><%=  user.name %></td>
          <td>フォロー数: <%= user.following_users.count %></td>
          <td>フォロワー数: <%= user.followed_users.count %></td>
          <td><%= link_to 'Show', user_path(user) %></td>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>
</div>